        <main>
            <% if (mensagem) { %>
                <div class="erros">
                    <p class="mensagem-erro"><%= mensagem %></p>
                </div>
            <% } else if (eventos && eventos.length > 0) { %>
                <div class="container-de-eventos">
                    <% eventos.forEach(evento => { %>
                        <div class="evento">
                            <p class="descricao"><%= evento.descricao %></p>
                            <p><%= new Date(evento.dtHrCriado).toLocaleString('pt-BR', { dateStyle: 'short', timeStyle: 'short' }) %></p>
                            <% if (evento.unidade) { %>
                                <p><%= evento.unidade.tipo %> <%= evento.unidade.endereco.uf %></p>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
            <% } else if (eventos && eventos.length === 0) { %>
                <p>Nenhum evento de rastreamento disponÃ­vel para o cÃ³digo inserido.</p>
            <% } else { %>
                <p></p>
            <% } %>
        </main>
    </div>
